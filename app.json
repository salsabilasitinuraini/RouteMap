{
  "expo": {
    "name": "RouteMap",
    "slug": "habitumap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/RouteMap.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/RouteMap.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366F1",
      "androidMode": "default",
      "androidCollapsedTitle": "RouteMap"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Aplikasi ini membutuhkan akses lokasi untuk tracking rute harian Anda.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Aplikasi ini membutuhkan akses lokasi untuk tracking rute harian Anda.",
        "NSCameraUsageDescription": "Aplikasi ini membutuhkan akses kamera untuk mengambil foto di lokasi.",
        "NSPhotoLibraryUsageDescription": "Aplikasi ini membutuhkan akses galeri untuk memilih foto.",
        "NSUserNotificationsUsageDescription": "Aplikasi ini membutuhkan akses notifikasi untuk mengingatkan kebiasaan harian Anda."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY_HERE"
        }
      },
      "package": "com.salsabilasna.habitumap"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Aplikasi membutuhkan akses untuk memilih foto dari galeri Anda.",
          "cameraPermission": "Aplikasi membutuhkan akses kamera untuk mengambil foto."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "8aacf085-2152-4b62-9925-967a92024a2e"
      }
    }
  }
}
